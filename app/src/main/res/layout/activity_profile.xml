<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Activities.ActivityProfile"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arc"
                android:orientation="vertical">

                <include layout="@layout/toolbar_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_start_end_small"
                    android:gravity="center"
                    android:text="@string/username"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_text_size" />


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start_end_small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iUsername"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginStart="@dimen/margin_start_end_small"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:src="@drawable/icon_username" />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/username"
                        android:layout_marginHorizontal="@dimen/small_margin"
                        android:textColor="@color/text_colorP"
                        android:maxLines="1"
                        android:gravity="fill_vertical"
                        android:textSize="@dimen/text_size_normal" />


                </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/view_height"
                      android:layout_marginTop="@dimen/normal_margin"
                      android:background="@color/dark_gray" />
              </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/normal_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iDate"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginStart="@dimen/margin_start_end_small"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:src="@drawable/icon_date" />

                    <EditText
                        android:id="@+id/etDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/date"
                        android:layout_marginHorizontal="@dimen/small_margin"
                        android:textColor="@color/text_colorP"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/dark_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/normal_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iPhone"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginStart="@dimen/margin_start_end_small"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:src="@drawable/icon_phone" />

                    <EditText
                        android:id="@+id/etPhoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="8181234567"
                        android:textDirection="locale"
                        android:layout_marginHorizontal="@dimen/small_margin"
                        android:textColor="@color/text_colorP"
                        android:textSize="@dimen/text_size_normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/dark_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/normal_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iInstaAcc"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginStart="@dimen/margin_start_end_small"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:src="@drawable/icon_account_i" />

                    <EditText
                        android:id="@+id/etInstagramAcc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="@string/instaAcc"
                        android:layout_marginHorizontal="@dimen/small_margin"
                        android:textColor="@color/text_colorP"
                        android:textSize="@dimen/text_size_normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/dark_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/normal_margin"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/iEmail"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginStart="@dimen/margin_start_end_small"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:src="@drawable/icon_email" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/small_margin"
                        android:background="@android:color/transparent"
                        android:text="info@aplusdesign.co"
                        android:textColor="@color/text_colorP"
                        android:textDirection="locale"
                        android:textSize="@dimen/text_size_normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/dark_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/normal_margin"
                    >

                    <ImageView
                        android:id="@+id/iPassword"
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginStart="@dimen/margin_start_end_small"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:src="@drawable/icon_eye" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/small_margin"
                        android:background="@android:color/transparent"
                        android:text="@string/password"
                        android:textColor="@color/text_colorP"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:layout_width="@dimen/icon_normal"
                        android:layout_height="@dimen/icon_normal"
                        android:layout_marginEnd="@dimen/margin_start_end_small"
                        android:id="@+id/iReload"
                        android:src="@drawable/icon_relod"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/dark_gray" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/big_margin"
                android:gravity="center_horizontal">


                <Button
                    android:id="@+id/btEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_rounded_color_"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/EditProfile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>